<dl>
  <dt>
    APR
  </dt>
  <dd>
    <%= @apr.to_s(:percentage, { :precision => 4 } ) %>
  </dd>

  <dt>
    Number of years
  </dt>
  <dd>
    <%= @years %>
  </dd>

  <dt>
    Principal
  </dt>
  <dd>
    <%= @principal.to_s(:currency, { :precision => 2 }) %>
  </dd>

